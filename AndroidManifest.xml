<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.movie.locations"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.movie.locations.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- google cloud messaging/services -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.google.android.c2dm.intent.RECEIVE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.movie.locations.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.movie.locations.permission.C2D_MESSAGE" />

    <!--
         <permission
        android:name="com.vogella.android.locationapi.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    -->

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <uses-library android:name="com.google.android.maps" />

        <receiver
            android:name="com.movie.locations.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.movie.locations" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.movie.locations.service.DatabaseChangedReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.movie.locations.service.DATABASE_CHANGED" >
                </action>
            </intent-filter>
        </receiver>

        <service android:name="com.movie.locations.gcm.GcmIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAKpB0KIY364seJQOfLYXbgqt4V-omZi1A" />

        <!--
        launch main activity first
        to ensure all json is received
        from async call
        -->


        <!--
        this data will populate
        a sqlite database on the client
        -->

        <activity
            android:name="com.movie.locations.application.MainActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        TODO: the item content needs to be
        organized inside a sliding tray menu
        -->


        <!--
        item detail activity needs to 
        be populated with adapters from the 
        database
        -->
        <activity
            android:name="com.movie.locations.application.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.movie.locations.application.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>

        <!--
        item list activity needs to 
        be populated with adapters from the database
        -->
        <activity
            android:name="com.movie.locations.application.ItemListActivity"
            android:label="@string/title_activity_home" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.movie.locations.application.FilmLocationPagerActivity"
            android:label="@string/title_activity_film_sort" >
        </activity>
        <activity
            android:name="com.movie.locations.application.WorldLocationDetailActivity"
            android:label="@string/title_activity_film_detail" >
        </activity>
        <activity
            android:name="com.movie.locations.application.MapDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_map"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.movie.locations.application.MoviePosterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_movie_poster"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.movie.locations.application.UserDetailActivity"
            android:label="@string/title_activity_user_detail" >
        </activity>
        <activity
            android:name="com.movie.locations.application.CommentDetailActivity"
            android:label="@string/title_activity_comment_detail" >
        </activity>
        <activity
            android:name="com.movie.locations.application.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name="com.movie.locations.application.QuizActivity"
            android:label="@string/title_activity_quiz" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.movie.locations.application.WorldLocationDetailActivity" />
        </activity>
        <activity
            android:name="com.movie.locations.application.FriendDetailActivity"
            android:label="@string/title_activity_friend_detail" >
        </activity>
        <activity
            android:name="com.movie.locations.AchievementActivity"
            android:label="@string/title_activity_achievement" >
        </activity>
        <activity
            android:name="com.movie.locations.application.ConclusionActivity"
            android:label="@string/title_activity_conclusion" >
        </activity>
    </application>

</manifest>