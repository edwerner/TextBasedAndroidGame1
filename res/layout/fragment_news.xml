<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.movie.locations.NewsActivity$UserDetailFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gameWorldsImage1"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/filmlist_icon_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/circuitboard_004_green" >
        </ImageView>

        <ImageView
            android:id="@+id/gameWorldsImage2"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/filmlist_icon_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/circuitboard_004_green" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/white_overlay"
        android:orientation="vertical" >

        <TextView
            style="@style/CodeFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MakerQuest"
            android:textSize="24sp" />

        <TextView
            style="@style/CodeFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit &apos;Worlds&apos; tab to get started"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>