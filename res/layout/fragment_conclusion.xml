<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.movie.locations.application.ConclusionActivity$ConclusionFragment" >

    <ImageView
        android:id="@+id/conclusionImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:background="@color/white_overlay"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/conclusionTitle"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/item"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/conclusionTitleText"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/conclusionCopyTitle"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/conclusionCopyText"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pointsDataTitle"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/points_awarded"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pointsDataText"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bonusPointsDataTextTitle"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/total_points"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bonusPointsDataText"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dismissConclusionButton1"
            style="@style/CodeFont"
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:text="@string/dismiss" />

        <ImageView
            android:id="@+id/share_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
        	android:background="@drawable/gplus_share"
            android:contentDescription="@string/image_desc" />
    </LinearLayout>

</LinearLayout>